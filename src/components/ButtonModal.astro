---
interface Props {
  texto: string
}
const { texto } = Astro.props
---

<button class="btn-modal" data-bs-toggle="modal" data-bs-target="#formReservaMisa">
  {texto}
</button>

<style>
  .btn-modal {
    color: white;
    width: 10rem;
    padding: 0.5rem 1rem;
    background-color: rgba(255, 255, 255, 0.15);
    border: 1px solid white;
    border-radius: 8px;
    overflow: hidden;
    transition:
      transform 200ms ease,
      background-color 200ms ease;
    position: relative;
    z-index: 0;
    &::before {
      content: "";
      position: absolute;
      top: 0;
      transition: left 300ms ease;
      z-index: -1;
      background-color: rgba(255, 255, 255, 0.4);
      left: -85%;
      width: 100%;
      height: 150%;
      transform: rotate(45deg);
    }
    &:hover {
      transform: translateY(0.3rem);
      &::before {
        left: 100%;
      }
    }
  }
  @media (max-width: 991.98px) {
    .btn-modal {
      margin: 0 auto 1rem auto;
    }
  }
</style>
