---
interface Props {
  title: string
  description: string
  img?: string
  icon: string
  finalText: string
  features: string[]
}
const { title, description, img, icon, finalText, features } = Astro.props
---

<section class="flip-card">
  <article class="face front">
    <div class="card-header" style={`background-image: url('${img}')`}></div>
    <div class="card-content">
      <h2>{title}</h2>
      <p>{description}</p>
    </div>
  </article>
  <article class="face back text-light">
    <img src={icon} alt="" />
    <div class="content">
      <hr />
      <h3>Caracter√≠sticas</h3>
      <ul>
        {features.map((feature) => <li>{feature}</li>)}
      </ul>
      <hr />
    </div>
    <p>{finalText}</p>
  </article>
</section>

<style>
  .flip-card {
    position: relative;
    width: 20rem;
    height: 25rem;
    & .face {
      position: absolute;
      width: 100%;
      height: 100%;
      display: flex;
      flex-direction: column;
      backface-visibility: hidden;
      border-radius: 10px;
      overflow: hidden;
      transition: transform 0.5s ease-in-out;
    }
    & .front {
      transform: perspective(600px) rotateY(0deg);
      background-color: #00794a;
      & .card-header {
        width: 100%;
        height: 12rem;
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
        border-radius: 100% 0% 100% 0% / 0% 50% 50% 100%;
      }
      & .card-content {
        padding: 0 0.5rem;
        display: flex;
        flex: 1;
        flex-direction: column;
        justify-content: center;
        color: white;
        text-align: center;
      }
    }
    & .back {
      transform: perspective(600px) rotateY(180deg);
      background-image: linear-gradient(135deg, #28a770, #0f633a);
      & img {
        width: 6rem;
        margin: 0 auto;
      }
      & .content {
        padding: 0 0.5rem;
        text-align: center;
        & hr {
          margin: 0;
          border: solid;
          border-radius: 2rem;
        }
        & h3 {
          margin: 0.5rem 0 0 0;
          font-size: x-large;
          text-transform: uppercase;
        }
        & ul {
          color: rgba(255, 255, 255, 0.8);
          margin: 0 0 0.5rem 0;
          padding: 0 1.5rem;
          font-size: 0.9rem;
          text-align: start;
        }
      }
      & p {
        margin: 0;
        flex: auto;
        padding: 0.5rem 1.5rem;
        text-align: justify;
        font-size: 0.9rem;
      }
    }
    &:hover {
      & .front {
        transition-delay: 0.1s;
        transform: perspective(600px) rotateY(180deg);
      }
      & .back {
        transition-delay: 0.1s;
        transform: perspective(600px) rotateY(360deg);
      }
    }
  }
</style>
