---
interface Props {
  usuario: string
  estrellas: number
  fecha: string
  comentario: string
}
const { usuario, estrellas, comentario, fecha } = Astro.props

let starClasses = []

for (let i = 1; i <= 5; i++) {
  if (i <= estrellas) {
    starClasses.push("bi bi-star-fill")
  } else if (i - estrellas <= 0.5) {
    starClasses.push("bi bi-star-half")
  } else {
    starClasses.push("bi bi-star")
  }
}
---

<div class="card h-100 p-3">
  <div class="d-flex align-items-center mb-2">
    <i class="bi bi-person-circle me-2" style="font-size: 1.5rem;"></i>
    <span>{usuario}</span>
  </div>
  <div class="d-flex justify-content-between mb-2">
    <div class="text-warning">
      {starClasses.map((starClass) => <i class={starClass} />)}
    </div>
    <span>{fecha}</span>
  </div>
  <p class="card-text">{comentario}</p>
</div>
