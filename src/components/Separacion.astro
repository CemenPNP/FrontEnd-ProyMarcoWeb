---
interface Props {
  texto: string
}
const { texto } = Astro.props
---
<div class="section-separator d-flex text-center m-0 align-items-center my-3 mx-0 mx-md-n3">
    <span class="section-title text-success p-0 fw-bold text-nowrap fs-3 text-uppercase">{texto}</span>
</div>

<style>
.section-separator::before, .section-separator::after {
    content: "";
    flex: 1;
    border-bottom: 2px solid rgba(25, 135, 84, 1);
    border-radius: 5px;
}

.section-separator::before {
    margin-right: 10px;
}

.section-separator::after {
    margin-left: 10px;
}
</style>