            </li>
          </ul>
        </nav>
      </div>
    </aside>
    <main>
      <slot />
    </main>
  </body>
</html>

<style is:global>
  *,
  *::before,
  *::after {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }
  @font-face {
    font-family: "Quicksand";
    src: url("/fonts/Quicksand-VariableFont.ttf") format("truetype");
    font-weight: 100 900;
    font-style: normal;
    font-display: swap;
  }
  html {
    font-family: "Quicksand", system-ui;
  }
</style>

<style>
  main {
    margin: 0 0 0 300px;
    padding: 25px 40px;
  }
  aside {
    height: 100vh;
    width: 300px;
    position: fixed;
    background-color: #f5f5f5; /* Fondo claro */
    border-radius: 15px; /* Bordes redondeados */
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    padding: 20px;
  }
  aside .rep {
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 20px 0;
    gap: 10px;
  }
  aside .rep .favicon {
    width: 40px;
    height: 40px;
    margin-right: -6px;
    margin-left: -5px;
  }
  aside .rep h2 {
    font-size: 1.4rem;
    text-transform: uppercase;
    color: #009970;
  }
  aside nav ul {
    list-style-type: none;
  }
  aside nav ul li {
    margin: 0 0 5px 0;
  }
  aside nav ul li a {
    display: flex;
    align-items: center;
    text-decoration: none;
    color: #333;
    font-family: "Quicksand", sans-serif;
    padding: 15px 15px 15px 40px;
    border-radius: 20px;
    gap: 1.5rem;
    transition:
      background-color 0.3s ease,
      color 0.3s ease;
    /* transition-delay: 50ms; */
  }
  aside nav ul li a:hover {
    background-color: #009970;
    color: #f5f5f5;
  }
  aside nav ul li a span {
    font-size: 1.2rem;
  }
  @media (max-width: 1000px) {
    aside {
      width: 250px;
      transition: width 0.2s;
    }
    main {
      margin: 0 0 0 250px;
    }
  }
  @media (max-width: 768px) {
    aside {
      padding: 20px 10px;
      width: 80px;
      transition: width 0.2s;
    }
    main {
      margin: 0 0 0 80px;
    }

    aside .rep h2,
    aside nav ul li a span,
    aside .lkh .uwu,
    aside div a span {
      display: none;
    }

    aside .rep .favicon,
    aside nav ul li a .icon,
    aside .lkh .icon,
    aside div a .icon {
      margin: 0;
    }

    aside nav ul li a,
    aside .lkh,
    aside div a {
      justify-content: center;
      padding: 15px;
    }
  }
</style>
