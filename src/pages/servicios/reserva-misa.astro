---
import FlipCard from "@/components/FlipCard.astro"
import Separacion from "@/components/Separacion.astro"
import Layout from "@/layouts/Layout.astro"
const authCookie = Astro.cookies.get("auth_token")?.value
---

<Layout title="Reserva de misas">
  <div class="bg-success uwu text-light">
    <div class="container xd">
      <div class="waza">
        <a href="/servicios" class="text-decoration-none">
          <i class="bi bi-arrow-left"></i>
          Regregar
        </a>
        <h1>Reserva de misa</h1>
        <p>
          Reserve una misa en honor a sus seres queridos en un ambiente solemne
          y respetuoso, con opciones adaptadas a sus necesidades.
        </p>
        <button id="reserva" data-bs-toggle="modal" data-bs-target="#formModal">
          Reservar
        </button>
      </div>
      <div class="ppp">
        <img src="/servicios/misa.png" alt="" />
      </div>
    </div>
    <i class="bi bi-arrow-down-circle-fill"></i>
  </div>
  <div
    class="modal fade"
    id="formModal"
    tabindex="-1"
    aria-labelledby="formModalLabel"
    aria-hidden="true"
  >
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="formModalLabel">
            Solicitud de misa
          </h1>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="modal"
            aria-label="Close"></button>
        </div>
        <form>
          <div class="modal-body">
            {authCookie ? (
              <div class="form-floating mb-3">
                <input
                  type="text"
                  class="form-control"
                  id="floatingIntencion"
                  placeholder="Intención"
                />
                <label for="floatingIntencion">Intención</label>
              </div>

              <div class="form-floating mb-3">
                <select
                  class="form-select"
                  aria-label="selector de tipo de misa"
                  id="floatingTipoMisa"
                >
                  <option value="requiem" selected>Misa de Réquiem (S/ 350 por hora)</option>
                  <option value="aniversario">Misa de Aniversario (S/ 300 por hora)</option>
                  <option value="cuerpo-presente">Misa de Cuerpo Presente (S/ 500 por hora)</option>
                  <option value="novenario">Misa de Novenario (S/ 2000 por novenario)</option>
                  <option value="intenciones-especiales">
                    Misa de Intenciones Especiales (S/ 250 por hora)
                  </option>
                </select>
                <label for="floatingTipoMisa">Tipo de misa</label>
              </div>

              <div class="form-floating mb-3">
                <select
                  class="form-select"
                  aria-label="duración de misa"
                  id="floatingDuration"
                >
                  <option value="60" selected>1 hora</option>
                  <option value="90">1.5 horas</option>
                  <option value="120">2 horas</option>
                  <option value="150">2.5 horas</option>
                  <option value="180">3 horas</option>
                </select>
                <label for="floatingDuration">Duración de la misa</label>
              </div>

              <div class="form-floating mb-3">
                <input
                  type="date"
                  class="form-control"
                  id="floatingDate"
                  placeholder="Fecha de reserva"
                />
                <label for="floatingDate">Fecha de reserva</label>
              </div>

              <div class="form-floating mb-3">
                <input
                  type="time"
                  class="form-control"
                  id="floatingTime"
                  placeholder="Hora de reserva"
                  min="06:00"
                  max="20:00"
                  step="1800"
                />
                <label for="floatingTime">Hora de reserva</label>
              </div>

              <div class="form-floating">
                <textarea id="floatingComen" class="form-control"></textarea>
                <label for="floatingComen">Comentario</label>
              </div>
            ) : (
              <h5 class="text-center">Inicia sesion para hacer una reserva</h5>
              <a
                href="/login"
                class="login-button text-decoration-none text-white rounded-4 px-3 py-2 m-t-5"
              >
                Iniciar sesión
              </a>
            )}
          </div>
          <div class="modal-footer">
            <button class="btn" data-bs-dismiss="modal">Cerrar</button>
            {authCookie && (
              <button class="btn btn-success" type="submit">Solicitar</button>
            )}
          </div>
        </form>
      </div>
    </div>
  </div>
  <main class="container mb-3">
    <Separacion texto="Tipos de misa" />
    <section class="pedo">
      <FlipCard
        title="Misas de Réquiem"
        description="Misa solemne ofrecida en memoria de un ser querido fallecido, rogando por su descanso eterno y la paz de su alma."
        img="/servicios/misas/misa-requiem.jpg"
        icon="/cross.svg"
        finalText="Ideal para conmemorar el fallecimiento de un ser querido, buscando consuelo espiritual y unión familiar a través de las oraciones."
        features={[
          "Duración mínima de 1 hora",
          "Precio: S/ 350 por la primera hora, S/ 150 por cada 30 min adicionales",
          "Incluye música litúrgica solemne y oraciones personalizadas",
        ]}
      />
      <FlipCard
        title="Misa de Aniversario"
        description="Misa especial para conmemorar el aniversario del fallecimiento de un ser querido, pidiendo por su descanso eterno."
        img="/servicios/misas/misa-aniversario.jpg"
        icon="/cross.svg"
        finalText="Ideal para recordar a un ser querido en su aniversario, brindando consuelo y unión familiar en oración."
        features={[
          "Duración mínima de 1 hora",
          "Precio: S/ 300 por la primera hora, S/ 120 por cada 30 min adicionales",
          "Ceremonia íntima con opción de dedicatorias y lecturas personalizadas",
        ]}
      />
      <FlipCard
        title="Misa de Cuerpo Presente"
        description="Un servicio religioso que acompaña el velorio del difunto, brindando consuelo espiritual a los familiares y pidiendo por el eterno descanso de su alma."
        img="/servicios/misas/misa-cuerpo.jpg"
        icon="/cross.svg"
        finalText="Para despedir un ser querido antes de su entierro, con un momento de oración y compañia espiritual. Es un espacio donde la fe y la unión familiar cobran importancia en el proceso de duelo."
        features={[
          "Duración mínima de 1.5 horas",
          "Precio: S/ 500 por la primera hora, S/ 200 por cada 30 min adicionales",
          "Servicio especial durante el velorio, con acompañamiento espiritual completo",
        ]}
      />
      <FlipCard
        title="Misa de Novenario"
        description="Serie de misas celebradas durante nueve días consecutivos, en honor al alma del difunto, como parte del proceso de duelo y oración por su descanso eterno."
        img="/servicios/misas/misa-novenario.jpg"
        icon="/cross.svg"
        finalText="Tradición que permite a familiares y amigos orar por el descanso del alma del difunto en los nueve días posteriores a su fallecimiento. Tiempo de reflexión, oración y acompañamiento familiar."
        features={[
          "Precio: S/ 2000 por el novenario completo, S/ 150 por cada 30 min adicionales(afecta a todas las misas)",
          "Incluye guías y recursos para oraciones diarias durante los nueve días",
        ]}
      />
      <FlipCard
        title="Misa de Intenciones Especiales"
        description="Un servicio religioso ofrecido para pedir por diversas intenciones personales o familiares, como salud, paz, agradecimiento, o por el descanso de un ser querido."
        img="/servicios/misas/misa-especial.jpg"
        icon="/cross.svg"
        finalText="La misa de intenciones especiales permite a los fieles elevar oraciones específicas en comunidad, ya sea para pedir por la salud, bienestar, o por el eterno descanso de un ser querido. Un momento de conexión espiritual y reflexión."
        features={[
          "Duración mínima de 1 hora",
          "Precio: S/ 250 por la primera hora, S/ 100 por cada 30 min adicionales",
        ]}
      />
    </section>
  </main>
</Layout>

<style>
  .login-button {
    display: flex;
    width: fit-content;
    margin: 0 auto;
    background-color: #009970;
    transition: 0.3s background-color;
    &:hover {
      background-color: #00b383;
    }
  }
  .pedo {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 1.5rem;
  }
  .modal-title {
    text-transform: uppercase;
    font-weight: bold;
  }
  #floatingComen {
    min-height: 7rem;
  }
  .bi-arrow-down-circle-fill {
    font-size: xx-large;
    margin: 1rem auto;
    animation: bubble 1.5s infinite ease-in-out;
  }
  @keyframes bubble {
    0%,
    100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-10px);
    }
  }
  .uwu {
    height: auto;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    clip-path: polygon(0 0, 100% 0, 100% 90%, 50% 100%, 0 90%);
  }
  .xd {
    display: flex;
    justify-content: space-between;
    padding: 8rem 0 0 0;
  }
  .ppp {
    flex-shrink: 1;
    & img {
      width: 100%;
      height: auto;
      border-radius: 6px;
    }
  }
  .waza {
    position: relative;
    display: flex;
    justify-content: center;
    flex-direction: column;
    width: 35rem;
    & a {
      position: absolute;
      top: 0;
      margin-bottom: auto;
      width: fit-content;
      color: #f5f5f5;
    }
    & h1 {
      font-family: "Rubik", system-ui;
      text-transform: uppercase;
      font-size: 3.5rem;
      font-weight: 600;
    }
  }
  #reserva {
    color: white;
    width: 10rem;
    padding: 0.5rem 1rem;
    background-color: rgba(255, 255, 255, 0.15);
    border: 1px solid white;
    border-radius: 8px;
    overflow: hidden;
    transition:
      transform 200ms ease,
      background-color 200ms ease;
    position: relative;
    z-index: 0;
    &::before {
      content: "";
      position: absolute;
      top: 0;
      transition: left 300ms ease;
      z-index: -1;
      background-color: rgba(255, 255, 255, 0.4);
      left: -85%;
      width: 100%;
      height: 150%;
      transform: rotate(45deg);
    }
    &:hover {
      transform: translateY(0.3rem);
      &::before {
        left: 100%;
      }
    }
  }
  @media (max-width: 991.98px) {
    .xd {
      flex-direction: column;
      text-align: center;
      & .waza {
        width: 100%;
        & a {
          left: 0.5rem;
        }
        & h1 {
          margin: 1.5rem 0 0 0;
        }
        & #reserva {
          margin: 0 auto 1rem auto;
        }
      }
      & .ppp {
        padding: 1rem;
      }
    }
    .uwu {
      clip-path: polygon(0 0, 100% 0, 100% 95%, 50% 100%, 0 95%);
    }
  }
</style>
